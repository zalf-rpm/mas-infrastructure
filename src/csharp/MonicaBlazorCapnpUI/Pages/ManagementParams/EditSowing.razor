        <MudSelect @bind-Value=Params.Cultivar Label="Sow cultivar ...">
            @foreach (Mgmt.Cultivar cult in Enum.GetValues(typeof(Mgmt.Cultivar)))
            {
                <MudSelectItem Value="@cult">@cult.ToString()</MudSelectItem>
                }
            </MudSelect>
