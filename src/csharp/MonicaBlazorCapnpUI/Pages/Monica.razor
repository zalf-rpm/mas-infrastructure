    <MudExpansionPanel @bind-IsExpanded=@panelOpened["CropRotation"] Text="Change crop rotation">
        @code {
            private bool overwriteCropRotation = false;

            private IEnumerable<Mgmt.Event.Type> allMgmtEventTypes =
                Enum.GetValues(typeof(ExtType)).Cast<ExtType>().
                Select(et => new Mgmt.Event.Type { External = et }).Concat(
                    Enum.GetValues(typeof(Mgmt.Event.PhenoStage)).Cast<Mgmt.Event.PhenoStage>().
                    Select(ps => new Mgmt.Event.Type { Internal = ps }));

            private string mgmtEventTypeName(Mgmt.Event.Type t)
            {
                return textInfo.ToTitleCase(t.which == Mgmt.Event.Type.WHICH.External
                    ? t.External.ToString() : t.Internal.ToString());
            }

            class DateWrapper
            {
                public Mas.Common.Date cDate { get; set; }
                public DateTime? Date
                {
                    get { return cDate == null ? null : Helper.CommonDate2DateTime(cDate); }
                    set { cDate = value.HasValue ? Helper.DateTime2CommonDate(value.Value) : null; }
                }
            }
        }
        <MudGrid>
            <MudItem xs="12">
                <MudSwitch @bind-Checked=overwriteCropRotation Color="Color.Primary" Label="Change" />
            </MudItem>
            <MudItem xs="12" Class=@(overwriteCropRotation ? "" : "d-none")>
                <MudSimpleTable Style="overflow-x: auto;">
                    <thead>
                        <tr>
                            <th>When</th>
                            <th>Type</th>
                            <th>Options</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (i, e) in cropRotation.Select((e, i) => (i, e)))
                        {
                            Func<float?, string> valid = val => null;
                            <tr>
                                <td>
                                    <MudSelect Value=@e.which
                                               T=@Mgmt.Event.WHICH
                                               ValueChanged=@(v => {
                                                              e.which = v;
                                                              switch (e.which)
                                                              {
                                                                  case Mgmt.Event.WHICH.At:
                                                                      e.At = new() { Date = new() };
                                                                      break;
                                                                  case Mgmt.Event.WHICH.Between:
                                                                      e.Between = new() { Earliest = new(), Latest = new() };
                                                                      break;
                                                                  case Mgmt.Event.WHICH.After:
                                                                      e.After = new() { Event = new() };
                                                                      break;
                                                              }
                                                          })
                                               Label="When options">
                                        <MudSelectItem Value=@Mgmt.Event.WHICH.At>AT a date</MudSelectItem>
                                        <MudSelectItem Value=@Mgmt.Event.WHICH.Between>auto BETWEEN dates</MudSelectItem>
                                        <MudSelectItem Value=@Mgmt.Event.WHICH.After>AFTER events</MudSelectItem>
                                    </MudSelect>
                                    @switch (e.which)
                                    {
                                        case Mgmt.Event.WHICH.At:
                                            var eAtDateTime = new DateWrapper { cDate = e.At.Date };
                                            <MudDatePicker Label="at date"
                                                           @bind-Date=eAtDateTime.Date
                                                           Editable="true" />
                                            break;
                                        case Mgmt.Event.WHICH.Between:
                                            if (e.Between == null) e.Between = new() { Earliest = new(), Latest = new() };
                                            var eEarliestDateTime = new DateWrapper { cDate = e.Between.Earliest };
                                            var eLatestDateTime = new DateWrapper { cDate = e.Between.Latest };
                                            <MudDatePicker Label="earliest date"
                                                           @bind-Date=eEarliestDateTime.Date
                                                           Editable="true" />
                                            <MudDatePicker Label="latest date"
                                                           @bind-Date=eLatestDateTime.Date
                                                           Editable="true" />
                                            break;
                                        case Mgmt.Event.WHICH.After:
                                            if (e.After == null) e.After = new() { Event = new() };
                                            <MudSelect @bind-Value=e.After.Event Label="Workstep">
                                                @foreach (var t in allMgmtEventTypes)
                                                            {
                                                    <MudSelectItem Value="@t">
                                                        @(textInfo.ToTitleCase(t.which == Mgmt.Event.Type.WHICH.External
                                                        ? t.External.ToString() : t.Internal.ToString()))
                                                    </MudSelectItem>
                                                            }
                                            </MudSelect>
                                            <MudTextField @bind-Value=e.After.Days
                                                          Label=@($"days after {mgmtEventTypeName(e.After.Event)}") />
                                            break;
                                    }
                                </td>
                                <td>
                                    <MudSelect Value=@e.TheType
                                               T=@ExtType
                                               ValueChanged=@(v => {
                                                                  e.TheType = v;
                                                                  //in case of automatic workstep set to between event time
                                                                  switch (v)
                                                                  {
                                                                      case ExtType.automaticSowing:
                                                                      case ExtType.automaticHarvest:
                                                                          e.which = Mgmt.Event.WHICH.Between;
                                                                          break;
                                                                  }
                                                                  StateHasChanged();
                                                              })
                                               Label="Workstep">
                                        @foreach (ExtType et in Enum.GetValues(typeof(ExtType)))
                                        {
                                            <MudSelectItem Value="@et">@textInfo.ToTitleCase(et.ToString())</MudSelectItem>
                                        }
                                    </MudSelect>
                                </td>
                                <td>
                                    @switch (e.TheType)
                                    {
                                        case ExtType.sowing:
                                            if (e.Params == null || e.Params is not Mgmt.Params.Sowing) e.Params = new Mgmt.Params.Sowing();
                                            if (e.Params is Mgmt.Params.Sowing s)
                                            {
                                                <MudCard>
                                                    <MudCardContent>
                                                        <MudSelect @bind-Value=s.Cultivar Label="Sow cultivar ...">
                                                            @foreach (Mgmt.Cultivar cult in Enum.GetValues(typeof(Mgmt.Cultivar)))
                                                                            {
                                                                <MudSelectItem Value="@cult">@textInfo.ToTitleCase(cult.ToString())</MudSelectItem>
                                                                            }
                                                        </MudSelect>
                                                        <MudTextField @bind-Value=s.PlantDensity
                                                                      Label="Plant density"
                                                                      HelperText="> 0 overwrites plant density from species parameters"
                                                                      Adornment="Adornment.End"
                                                                      AdornmentText="plants m-2" />
                                                    </MudCardContent>
                                                </MudCard>
                                            }
                                            break;
                                        case ExtType.automaticSowing:
                                            if (e.Params == null || e.Params is not Mgmt.Params.AutomaticSowing) e.Params = new Mgmt.Params.AutomaticSowing() { Sowing = new() };
                                            if (e.Params is Mgmt.Params.AutomaticSowing sa)
                                            {
                                                var s2 = sa.Sowing;
                                                valid = val => val < 0 || val > 100 ? "[0 - 100]" : null;
                                                <MudCard>
                                                    <MudCardContent>
                                                        <MudSelect @bind-Value=s2.Cultivar Label="Sow cultivar ...">
                                                            @foreach (Mgmt.Cultivar cult in Enum.GetValues(typeof(Mgmt.Cultivar)))
                                                                            {
                                                                <MudSelectItem Value="@cult">@textInfo.ToTitleCase(cult.ToString())</MudSelectItem>
                                                                            }
                                                        </MudSelect>
                                                        <MudTextField @bind-Value=s2.PlantDensity
                                                                      Label="Plant density"
                                                                      HelperText="> 0 overwrites plant density from species parameters"
                                                                      Adornment="Adornment.End"
                                                                      AdornmentText="plants m-2" />
                                                        <MudCard>
                                                            <MudCardContent>
                                                                <MudTextField @bind-Value=sa.MinTempThreshold
                                                                              Label="MinTempThreshold"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="°C" />
                                                                <MudTextField @bind-Value=sa.DaysInTempWindow
                                                                              Label="DaysInTempWindow"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="d" />
                                                                <MudTextField @bind-Value=sa.MinPercentASW
                                                                              Label="min % ASW"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="%"
                                                                              Validation=@valid />
                                                                <MudTextField @bind-Value=sa.MaxPercentASW
                                                                              Label="max % ASW"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="%"
                                                                              Validation=@valid />
                                                                <MudTextField @bind-Value=sa.Max3dayPrecipSum
                                                                              Label="max 3-day precip sum"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="mm" />
                                                                <MudTextField @bind-Value=sa.MaxCurrentDayPrecipSum
                                                                              Label="max current day precip sum"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="mm" />
                                                                <MudTextField @bind-Value=sa.TempSumAboveBaseTemp
                                                                              Label="temp sum > base temp"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="°C" />
                                                                <MudTextField @bind-Value=sa.BaseTemp
                                                                              Label="base temp"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="°C" />
                                                                <MudSwitch T=@bool
                                                                           CheckedChanged=@(b => {
                                                                                                if (b && sa.TheAvgSoilTemp == null)
                                                                                                    sa.TheAvgSoilTemp = new();
                                                                                                else if (!b && sa.TheAvgSoilTemp != null)
                                                                                                    sa.TheAvgSoilTemp = null;
                                                                                            })
                                                                           Label="Check for soil temperature?" />
                                                                @if (sa.TheAvgSoilTemp != null)
                                                                {
                                                                    <MudCard>
                                                                        <MudCardContent>
                                                                            <MudTextField @bind-Value=sa.TheAvgSoilTemp.SoilDepthForAveraging
                                                                                          Label="Soil depth for averaging"
                                                                                          Adornment="Adornment.End"
                                                                                          AdornmentText="m" />
                                                                            <MudTextField @bind-Value=sa.TheAvgSoilTemp.DaysInSoilTempWindow
                                                                                          Label="Days in soil temp windows"
                                                                                          Adornment="Adornment.End"
                                                                                          AdornmentText="d" />
                                                                            <MudTextField @bind-Value=sa.TheAvgSoilTemp.SowingIfAboveAvgSoilTemp
                                                                                          Label="Sowing if above avg soil temp"
                                                                                          Adornment="Adornment.End"
                                                                                          AdornmentText="°C" />
                                                                        </MudCardContent>
                                                                    </MudCard>
                                                                }
                                                            </MudCardContent>
                                                        </MudCard>
                                                    </MudCardContent>
                                                </MudCard>
                                            }
                                            break;
                                        case ExtType.harvest:
                                            if (e.Params == null || e.Params is not Mgmt.Params.Harvest) e.Params = new Mgmt.Params.Harvest() { OptCarbMgmtData = new() };
                                            if (e.Params is Mgmt.Params.Harvest h)
                                            {
                                                valid = val => val < 0 || val > 1 ? "[0 - 1]" : null;
                                                <MudCard>
                                                    <MudCardContent>
                                                        <MudCheckBox @bind-Checked=@h.Exported Label="Exported" />
                                                        <MudSwitch @bind-Checked=@h.OptCarbMgmtData.OptCarbonConservation
                                                                   Label="Carbon Conservation?" />
                                                        <MudCard Class=@(h.OptCarbMgmtData.OptCarbonConservation ? "" : "d-none")>
                                                            <MudCardContent>
                                                                <MudSelect @bind-Value=h.OptCarbMgmtData.CropUsage Label="CropUsage">
                                                                    <MudSelectItem Value=@Mgmt.Params.Harvest.CropUsage.biomassProduction>Biomass production</MudSelectItem>
                                                                    <MudSelectItem Value=@Mgmt.Params.Harvest.CropUsage.greenManure>Green manure</MudSelectItem>
                                                                </MudSelect>
                                                                <MudTextField @bind-Value=h.OptCarbMgmtData.CropImpactOnHumusBalance
                                                                              Label="Crop contribution to humus"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="?" />
                                                                <MudTextField @bind-Value=h.OptCarbMgmtData.ResidueHeq
                                                                              Label="ResidueHeq"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="?" />
                                                                <MudTextField @bind-Value=h.OptCarbMgmtData.OrganicFertilizerHeq
                                                                              Label="OrganicFertilizerHeq"
                                                                              Adornment="Adornment.End"
                                                                              AdornmentText="?" />
                                                                <MudTextField @bind-Value=h.OptCarbMgmtData.MaxResidueRecoverFraction
