<MudExpansionPanels MultiExpansion=@true>
    @code {
        private Dictionary<string, bool> panelOpened = new()
        {
            { "Connections", false },
            { "BaseFiles", false },
            { "Location", false },
            { "UpdateTimeSeries", false },
            { "ClimateService", false },
            { "SoilProfile", false },
