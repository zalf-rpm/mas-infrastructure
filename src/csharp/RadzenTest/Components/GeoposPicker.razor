@namespace RadzenTest.Components

<RadzenGoogleMap Style="@($"width:{Width};height:{Height}")"
                 Center="@(new GoogleMapPosition{Lat=CenterLatLng.Item1, Lng=CenterLatLng.Item2})" MapClick="MapClicked">

</RadzenGoogleMap>

@code {
    [Parameter]
    public String Width { get; set; }

    [Parameter]
    public String Height { get; set; }

    [Parameter]
    public (double, double) CenterLatLng { get; set; }

    [Parameter]
    public (double, double) LatLng { get; set; }

    [Parameter]
    public EventCallback<(double, double)> LatLngChanged { get; set; }

    //RadzenGoogleMap

    private async Task MapClicked(GoogleMapClickEventArgs args)
    {
        var p = args.Position;
        LatLng = (p.Lat, p.Lng);
        await LatLngChanged.InvokeAsync(LatLng);
    }
}
