@page "/demos/groups"
@inherits GroupingComponent
@layout DemoLayout
@inject LayoutData LayoutData

@code {
    protected override void OnInitialized()
    {
        base.OnInitialized();

        LayoutData.Title = "Grouping";
        LayoutData.Info = "You can (un)group nodes using CTRL+ALT+G.<br>" +
                "Currently, the library doesn't handle nested groups yet nor ports.";
        LayoutData.DataChanged();
    }
}

<CascadingValue Value="diagram">
    <DiagramCanvas>
        <Widgets>
            <NavigatorWidget Width="300" Height="200" DefaultStyle="true"></NavigatorWidget>
        </Widgets>
    </DiagramCanvas>
</CascadingValue>
